@model Hobby
<div style="display: inline-block; width:650px;"><h1>Create an Activity </h1></div>
<div style="display: inline-block; width:250px;float:right;"><h6><a asp-action="Dashboard">Dashboard</a> |<a href="/Logout">Lougout</a></h6></div>




<div style="display: inline-block; width:350px;">

    <form asp-action="CreatePost" asp-controller="Activity" method="post">
        <div class="form-group">
            <span asp-validation-for="Name"></span>
            <br>
            <label asp-for="Name">Name</label>
            <input class="form-control" asp-for="Name" style="width:300px">
        </div>

        <div class="form-group">
            <span asp-validation-for="Description"></span>
            <br>
            <label asp-for="Description">Description:</label>
            <input class="form-control" asp-for="Description" style="width:300px">
        </div>

        <br>
        <button class="btn btn-primary">Create </button>
    </form>

</div>